{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"dist",
			"apps/frontend/components.d.ts",
			"apps/frontend/auto-imports.d.ts"
		]
	},
	"overrides": [
		{
			"include": ["packages/zero/src/zero-schema.gen.ts"],
			"linter": {
				"enabled": false
			},
			"formatter": {
				"lineWidth": 160,
				"enabled": true,
				"formatWithErrors": true
			}
		}
	],
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
