{
	"name": "zero-git",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"start": "turbo run start",
		"clean": "turbo run clean",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"typecheck": "turbo run check-types",
