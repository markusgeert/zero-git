{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"start": {
			"dependsOn": ["build"],
			"cache": true,
			"persistent": true
		},
		"generate-schema": {
			"inputs": [
				"packages/zero/src/drizzle-zero.config.ts",
				"packages/zero/scripts/fix-zero.ts"
			],
			"outputs": ["packages/zero/src/zero-schema.gen.ts"],
			"cache": true
		},
		"build": {
			"dependsOn": ["generate-schema", "^build"],
			"cache": true,
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"check-types": {
			"dependsOn": ["^check-types"],
			"cache": true
		},
		"clean": {
			"cache": false,
			"persistent": true
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"//#format-and-lint": {},
		"//#format-and-lint:fix": {
			"cache": false
		}
	}
}
