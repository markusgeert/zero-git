{
	"name": "@zero-git/zero",
	"type": "module",
	"scripts": {
		"predev": "turbo build --filter=@zero-git/zero",
		"dev": "bunx zero-cache-dev -p src/zero-schema.ts",
		"prebuild": "drizzle-zero generate -c src/drizzle-zero.config.ts -o src/zero-schema.gen.ts && sed -i '' 's/\".\\/drizzle-zero.config\"/\".\\/drizzle-zero.config.js\"/g' src/zero-schema.gen.ts && (cd ../../ && bun fix || true)",
		"build": "tsc",
		"check-types": "tsc --noEmit --skipLibCheck --strict --project tsconfig.json"
	},
	"exports": {
		".": "./src/zero-schema.ts"
	},
	"peerDependencies": {
		"@rocicorp/zero": "^0.19.0"
	},
	"dependencies": {
		"@zero-git/auth": "workspace:*"
	},
	"devDependencies": {
		"@zero-git/db": "workspace:*",
		"@zero-git/typescript-config": "workspace:*",
		"drizzle-zero": "^0.10.1",
		"typescript": "^5.8.3"
	}
}
