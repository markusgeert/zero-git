{
	"name": "@zero-git/db",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"dev": "bun run dev:db-up",
		"postdev": "bun run dev:db-down",
		"clean": "bun run dev:db-down && bun run dev:clean && bun run db:regen",
		"dev:db-up": "docker compose --env-file .env -f ../../docker/docker-compose.yml up",
		"dev:db-down": "docker compose --env-file .env -f ../../docker/docker-compose.yml down",
		"dev:clean": "source .env && docker volume rm -f docker_zero_git_pgdata",
		"db:regen": "drizzle-kit drop && drizzle-kit generate",
		"db:gen": "drizzle-kit generate"
	},
	"peerDependencies": {
		"drizzle-orm": ">=0.41.0"
	},
	"devDependencies": {
		"@types/bun": "^1.2.9",
		"@zero-git/typescript-config": "workspace:*",
		"drizzle-kit": "^0.30.6"
	}
}
