{
  "name": "@zero-git/api",
  "type": "module",
  "scripts": {
    "dev": "PORT=9377 bun --watch src/index.ts",
    "start": "bun run src/index.ts",
    "dev:db-up": "docker compose --env-file .env -f ../../docker/docker-compose.yml up",
    "dev:db-down": "docker compose --env-file .env -f ../../docker/docker-compose.yml down",
    "dev:clean": "source .env && docker volume rm -f docker_zero_git_pgdata && rm -rf \"${ZERO_REPLICA_FILE}\"*"
  },
  "dependencies": {
    "@types/bun": "^1.2.9",
    "@zero-git/auth": "workspace:*",
    "@zero-git/zero": "workspace:*",
    "arktype": "^2.1.19",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.41.0",
    "hono": "^4.7.6",
    "jose": "^6.0.10",
    "nanoid": "^5.1.5",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/pg": "^8.11.12",
    "drizzle-kit": "^0.30.6",
    "tsx": "^4.19.3"
  }
}
