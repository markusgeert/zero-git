{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"env.d.ts",
		"components.d.ts",
		"auto-imports.d.ts",
		"nuxt-ui.d.ts",
		"src/**/*",
		"src/**/*.vue"
	],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

		"skipLibCheck": true,

		"paths": {
			"@/*": ["./src/*"],
			"#build/ui/*": ["../../node_modules/@nuxt/ui/.nuxt/ui/*"]
		}
	}
}
